<rxui:ReactiveWindow x:TypeArguments="vm:AppBootstrapper" x:Class="ModSink.WPF.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:rxui="http://reactiveui.net"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:vm="clr-namespace:ModSink.WPF.ViewModel"
                      xmlns:local="clr-namespace:ModSink.WPF"
                      xmlns:v="clr-namespace:ModSink.WPF.View"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      mc:Ignorable="d"
                      Title="MainWindow" Height="600" Width="1000"
                      WindowStartupLocation="CenterScreen">
    <TabControl>
        <TabItem Header="Library">
            <v:LibraryView x:Name="LibraryView" />
        </TabItem>
        <TabItem Header="Downloads">
            <v:DownloadsView x:Name="DownloadsView" />
        </TabItem>
        <!-- TabItem Header="Settings">
            <v:SettingsView DataContext="{Binding SettingsVM}" />
        </>-->
    </TabControl>
</rxui:ReactiveWindow>